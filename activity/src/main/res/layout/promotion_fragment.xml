<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/promotionImageBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/promotionPrice"
        android:layout_height="100px"
        android:layout_width="200px"
        android:textSize="55px"
        android:gravity="center|center_vertical"
        android:textStyle="bold"
        android:textColor="#6f2020"
        android:background="@drawable/price_round_shape"
        android:layout_marginTop="415px"
        android:layout_marginLeft="793px"
    />

    <TextView
        android:id="@+id/promotionPeca"
        android:layout_height="50px"
        android:layout_width="200px"
        android:textSize="25px"
        android:gravity="center|center_vertical"
        android:textStyle="bold"
        android:textColor="#40403e"
        android:text="faÃ§a seu pedido..."
        android:layout_marginTop="405px"
        android:layout_marginLeft="793px"
    />

    <TextView
        android:id="@+id/promotionClickHere"
        android:layout_height="50px"
        android:layout_width="200px"
        android:textSize="20px"
        android:gravity="center|center_vertical"
        android:textStyle="bold"
        android:textColor="#40403e"
        android:text="basta clicar aqui!"
        android:layout_marginTop="477px"
        android:layout_marginLeft="793px"
        />

    <TextView
        android:id="@+id/promotionTitle"
        android:layout_height="50px"
        android:layout_width="wrap_content"
        android:textSize="25px"
        android:gravity="center|center_vertical"
        android:textStyle="bold"
        android:textColor="#6f2020"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:background="@drawable/title_round_shape"
        android:layout_marginTop="373px"
        android:layout_marginLeft="280px"
    />

    <TextView
        android:id="@+id/promotionDescription"
        android:layout_height="90px"
        android:layout_width="480px"
        android:textSize="17px"
        android:gravity="center|center_vertical"
        android:textStyle="bold"
        android:textColor="#40403e"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:background="@drawable/description_round_shape"
        android:layout_marginTop="425px"
        android:layout_marginLeft="280px"
    />

    <Button
        android:layout_width="62px"
        android:layout_height="61px"
        android:id="@+id/btnOrder"
        android:background="@drawable/btn_pedir"
        android:layout_marginTop="380px"
        android:layout_marginLeft="960px"
    />

    <Button
        android:layout_width="62px"
        android:layout_height="62px"
        android:id="@+id/btnNutritionalInfo"
        android:background="@drawable/food_info"
        android:layout_marginTop="380px"
        android:layout_marginLeft="760px"
    />


    <Button
        android:layout_width="72px"
        android:layout_height="72px"
        android:id="@+id/btnArrowLeft"
        android:background="@drawable/arrow_left"
        android:layout_marginTop="195px"
        android:layout_marginLeft="15px"
    />

    <Button
        android:layout_width="72px"
        android:layout_height="72px"
        android:id="@+id/btnArrowRight"
        android:background="@drawable/arrow_right"
        android:layout_marginTop="195px"
        android:layout_marginLeft="940px"
    />

</RelativeLayout>