<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/imageBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/price"
        android:layout_width="160dp"
        android:layout_height="85dp"
        android:layout_marginLeft="593dp"
        android:layout_marginTop="370dp"
        android:background="@drawable/price_round_shape"
        android:gravity="center|center_vertical"
        android:textColor="#6f2020"
        android:textSize="55dp"
        android:textStyle="bold"
    />

    <TextView
        android:id="@+id/peca"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginLeft="593dp"
        android:layout_marginTop="360dp"
        android:gravity="center|center_vertical"
        android:text="faÃ§a seu pedido..."
        android:textColor="#40403e"
        android:textSize="17dp"
        android:textStyle="bold"
    />

    <TextView
        android:id="@+id/productClickHere"
        android:layout_width="155dp"
        android:layout_height="35dp"
        android:layout_marginLeft="605dp"
        android:layout_marginTop="420dp"
        android:gravity="center|center_vertical"
        android:text="basta clicar aqui!"
        android:textColor="#40403e"
        android:textSize="17dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="315dp"
        android:background="@drawable/title_round_shape"
        android:gravity="center|center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#6f2020"
        android:textSize="17dp"
        android:textStyle="bold"
    />

    <TextView
        android:id="@+id/description"
        android:layout_width="340dp"
        android:layout_height="85dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="370dp"
        android:background="@drawable/description_round_shape"
        android:gravity="center|center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#40403e"
        android:textSize="15dp"
        android:textStyle="bold"
    />

    <Button
        android:id="@+id/btnOrder"
        android:layout_width="62dp"
        android:layout_height="61dp"
        android:layout_marginLeft="745dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/btn_pedir"
    />

    <Button
        android:id="@+id/btnNutritionalInfo"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginLeft="540dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/food_info"
    />


    <Button
        android:id="@+id/btnArrowLeft"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="175dp"
        android:background="@drawable/arrow_left"
        android:visibility="invisible"
    />

    <Button
        android:id="@+id/btnArrowRight"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginLeft="880dp"
        android:layout_marginTop="175dp"
        android:background="@drawable/arrow_right"
        android:visibility="invisible"
    />

</RelativeLayout>