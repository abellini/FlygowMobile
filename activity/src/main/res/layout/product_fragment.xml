<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/imageBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/price"
        android:layout_width="170dp"
        android:layout_height="85dp"
        android:layout_marginLeft="785dp"
        android:layout_marginTop="425dp"
        android:background="@drawable/price_round_shape"
        android:gravity="center|center_vertical"
        android:textColor="#6f2020"
        android:textSize="35dp"
        android:textStyle="bold"
    />

    <TextView
        android:id="@+id/peca"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="775dp"
        android:layout_marginTop="415dp"
        android:gravity="center|center_vertical"
        android:text="faÃ§a seu pedido..."
        android:textColor="#40403e"
        android:textSize="25dp"
        android:textStyle="bold"
    />

    <TextView
        android:id="@+id/clickHere"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="775dp"
        android:layout_marginTop="472dp"
        android:gravity="center|center_vertical"
        android:text="basta clicar aqui!"
        android:textColor="#40403e"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="373dp"
        android:background="@drawable/title_round_shape"
        android:gravity="center|center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#6f2020"
        android:textSize="25dp"
        android:textStyle="bold"
    />

    <TextView
        android:id="@+id/description"
        android:layout_width="480dp"
        android:layout_height="90dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="425dp"
        android:background="@drawable/description_round_shape"
        android:gravity="center|center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#40403e"
        android:textSize="17dp"
        android:textStyle="bold"
    />

    <Button
        android:id="@+id/btnOrder"
        android:layout_width="62dp"
        android:layout_height="61dp"
        android:layout_marginLeft="920dp"
        android:layout_marginTop="382dp"
        android:background="@drawable/btn_pedir"
    />

    <Button
        android:id="@+id/btnNutritionalInfo"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginLeft="760dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/food_info"
    />


    <Button
        android:id="@+id/btnArrowLeft"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="195dp"
        android:background="@drawable/arrow_left"
        android:visibility="invisible"
    />

    <Button
        android:id="@+id/btnArrowRight"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginLeft="940dp"
        android:layout_marginTop="195dp"
        android:background="@drawable/arrow_right"
        android:visibility="invisible"
    />

</RelativeLayout>