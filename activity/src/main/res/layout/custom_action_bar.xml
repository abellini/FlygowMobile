<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textColor="#0c587f"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="3dp"
        android:gravity="center_vertical"
        android:textSize="26px"
        android:textStyle="bold"
    />

    <ImageButton
        android:id="@+id/btnEndOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:src="@drawable/btn_end_order" />


    <TextView
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:id="@+id/txtTotalOrderPrice"
        android:layout_centerVertical="true"
        android:layout_marginRight="130dp"
        android:layout_alignRight="@id/btnEndOrder"
        android:textColor="#ffffff"
        android:text="Sua Conta \n R$ 0,00"
        android:textSize="14dp"
        android:gravity="center|center_vertical"
        android:background="@drawable/order_value_round_shape"
        />

    <ImageButton
        android:id="@+id/btnBasket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/txtTotalOrderPrice"
        android:layout_centerVertical="true"
        android:layout_marginRight="126dp"
        android:background="@null"
        android:src="@drawable/btn_my_orders" />

    <ImageButton
        android:id="@+id/btnCallAttendant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/btnBasket"
        android:layout_centerVertical="true"
        android:layout_marginRight="128dp"
        android:background="@null"
        android:src="@drawable/btn_call_attendant" />

</RelativeLayout>