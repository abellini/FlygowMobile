<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="2dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2dp">

        <CheckBox
            android:id="@+id/checkboxOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingRight="32dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/checkboxOrder"
            android:paddingRight="460dp"
            android:textColor="#4d4d4d"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/observations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/checkboxOrder"
            android:textColor="#1b5869"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnAccompOrderItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/title" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btnAccompOrderItem"
            android:inputType="number"
            android:paddingRight="64dp"
            android:textColor="#1b5869"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/priceUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/quantity"
            android:inputType="numberDecimal"
            android:paddingRight="64dp"
            android:textColor="#1b5869"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/priceTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/priceUnit"
            android:inputType="numberDecimal"
            android:textColor="#1b5869"
            android:textSize="18sp" />

    </RelativeLayout>
</LinearLayout>